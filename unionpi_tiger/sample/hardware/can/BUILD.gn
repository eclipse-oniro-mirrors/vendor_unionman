  install_images = [ "system" ]
}

ohos_executable("cansequence") {
  output_name = "cansequence"
  sources = [ "cansequence.c" ]

  include_dirs =
      [ "//base/hiviewdfx/hilog/interfaces/native/innerkits/include" ]

