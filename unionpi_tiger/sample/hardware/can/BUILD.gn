import("//build/ohos.gni")
import("//build/ohos/ndk/ndk.gni")

config("warns") {
  cflags = [
    "-Wno-unused-value",
    "-Wno-unused-variable",
    "-Wno-implicit-function-declaration",
  ]
}

ohos_executable("canconfig") {
  output_name = "canconfig"
  sources = [
    "canconfig.c",
    "libsocketcan.c",
  ]

  include_dirs = [
    "//base/hiviewdfx/hilog/interfaces/native/innerkits/include",
    "//third_party/libnl/include",
  ]

  deps = [ "//third_party/libnl:libnl_share" ]

  configs = [ ":warns" ]

  external_deps = [
    "c_utils:utils",
    "hiviewdfx_hilog_native:libhilog",
  ]

  install_images = [ "system" ]
}

ohos_executable("candump") {
  output_name = "candump"
  sources = [ "candump.c" ]

  include_dirs =
      [ "//base/hiviewdfx/hilog/interfaces/native/innerkits/include" ]

  configs = [ ":warns" ]

  external_deps = [
    "c_utils:utils",
    "hiviewdfx_hilog_native:libhilog",
  ]

  install_images = [ "system" ]
}

ohos_executable("canecho") {
  output_name = "canecho"
  sources = [ "canecho.c" ]

